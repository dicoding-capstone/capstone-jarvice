<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fragment_home"
    tools:context=".ui.detail.DetailActivityBanner">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_detail">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="8dp">


            <TextView
                android:id="@+id/detail_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="@string/jobs_detail_title"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/jobs_name_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-thin"
                android:text="@string/jobs_name_title"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textSize="13sp"
                app:layout_constraintEnd_toStartOf="@+id/two_dot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_title" />

            <TextView
                android:id="@+id/company_name_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-thin"
                android:text="@string/company_name_title"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textSize="13sp"
                app:layout_constraintEnd_toStartOf="@+id/two_dot2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/jobs_name_title" />

            <TextView
                android:id="@+id/category_name_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-thin"
                android:text="@string/category_name_title"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textSize="13sp"
                app:layout_constraintEnd_toStartOf="@+id/two_dot3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/company_name_title" />

            <TextView
                android:id="@+id/location_name_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-thin"
                android:text="@string/location_name_title"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textSize="13sp"
                app:layout_constraintEnd_toStartOf="@+id/two_dot4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/category_name_title" />

            <TextView
                android:id="@+id/level_name_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-thin"
                android:text="@string/level_name_title"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textSize="13sp"
                app:layout_constraintEnd_toStartOf="@+id/two_dot5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/location_name_title" />

            <TextView
                android:id="@+id/time_name_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-thin"
                android:text="@string/time_name_title"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textSize="13sp"
                app:layout_constraintEnd_toStartOf="@+id/two_dot6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/level_name_title" />

            <TextView
                android:id="@+id/two_dot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="@string/two_dot"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/jobs_name_title"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toTopOf="@+id/jobs_name_title" />

            <TextView
                android:id="@+id/two_dot2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="@string/two_dot"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/company_name_title"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toTopOf="@+id/company_name_title" />

            <TextView
                android:id="@+id/two_dot3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="@string/two_dot"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/category_name_title"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toTopOf="@+id/category_name_title" />

            <TextView
                android:id="@+id/two_dot4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="@string/two_dot"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/location_name_title"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toTopOf="@+id/location_name_title" />

            <TextView
                android:id="@+id/two_dot5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="@string/two_dot"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/level_name_title"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toTopOf="@+id/level_name_title" />

            <TextView
                android:id="@+id/two_dot6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="@string/two_dot"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/time_name_title"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toTopOf="@+id/time_name_title" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="135dp" />

            <TextView
                android:id="@+id/tv_job_fill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/fill"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@+id/jobs_name_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/two_dot"
                app:layout_constraintTop_toTopOf="@+id/jobs_name_title" />

            <TextView
                android:id="@+id/tv_company_fill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/fill"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@+id/company_name_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/two_dot2"
                app:layout_constraintTop_toTopOf="@+id/company_name_title" />

            <TextView
                android:id="@+id/tv_category_fill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/fill"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@+id/category_name_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/two_dot3"
                app:layout_constraintTop_toTopOf="@+id/category_name_title" />

            <TextView
                android:id="@+id/tv_location_fill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/fill"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@+id/location_name_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/two_dot4"
                app:layout_constraintTop_toTopOf="@+id/location_name_title" />

            <TextView
                android:id="@+id/tv_level_fill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/fill"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@+id/level_name_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/two_dot5"
                app:layout_constraintTop_toTopOf="@+id/level_name_title" />

            <TextView
                android:id="@+id/tv_time_fill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/fill"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@+id/time_name_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/two_dot6"
                app:layout_constraintTop_toTopOf="@+id/time_name_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/img_arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <ImageView
        android:id="@+id/img_notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_notifications_24" />

    <TextView
        android:id="@+id/tv_title_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/text_color"
        android:text="@string/detail_title"
        app:layout_constraintEnd_toStartOf="@+id/img_notif"
        app:layout_constraintStart_toEndOf="@+id/img_arrow_back"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_web_page"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_button"
        android:drawableEnd="@drawable/ic_arrow_right2"
        android:elevation="20dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/bt_web_page"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view"
        tools:ignore="TouchTargetSizeCheck" />

    <ToggleButton
        android:id="@+id/toggleBookmark"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textOn=""
        android:textOff=""
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@drawable/bookmark_toggle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_web_page" />

</androidx.constraintlayout.widget.ConstraintLayout>